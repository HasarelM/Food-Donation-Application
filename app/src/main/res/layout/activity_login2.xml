<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/newkkk"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:background="@drawable/logo_selling"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Username "
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" * "
                    android:textColor="@color/col_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardMaxElevation="3dp"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true">

                <EditText
                    android:id="@+id/activity_login_et_username"
                    android:hint=" Enter User name"
                    android:text="test12345@gmail.com"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="3dp"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/ic_baseline_account"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Password "
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" * "
                    android:textColor="@color/col_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="3dp"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="true">

                <EditText
                    android:id="@+id/activity_login_et_password"
                    android:hint=" Enter Password"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:background="@null"
                    android:paddingTop="5dp"
                    android:text="1111111111"
                    android:paddingBottom="5dp"
                    android:inputType="textPassword"
                    android:textSize="12dp"
                    android:paddingLeft="3dp"
                    app:passwordToggleEnabled="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:padding="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/activity_login_rbn_donater"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:shadowColor="@color/col_red"
                    android:textColor="@color/white"
                    android:checked="true"
                    android:buttonTint="@color/col_red"
                    android:layout_height="wrap_content"
                    android:text="Donater" />
                <RadioButton
                    android:id="@+id/activity_login_rbn_delivery"
                    android:layout_width="0dp"
                    android:shadowColor="@color/col_red"
                    android:buttonTint="@color/col_red"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:checked="false"
                    android:layout_height="wrap_content"
                    android:text="Delivery" />
            </LinearLayout>

            <Button
                android:id="@+id/activity_login_btn_login"
                android:textSize="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:textAllCaps="false"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:elevation="100dp"
                android:background="@drawable/bg_background_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/activity_login_tv_forgetPassword"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="230dp"
                android:text="Forget Password ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/activity_login_btn_register"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:textAllCaps="false"
                android:layout_marginBottom="25dp"
                android:text="Register"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:elevation="100dp"
                android:background="@drawable/bg_background_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>